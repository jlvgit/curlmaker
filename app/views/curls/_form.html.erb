<%= form_for(@curl) do |f| %>
  <% if @curl.errors.any? %>
    <ul class="alert alert-danger">
      <% @curl.errors.full_messages.each do |msg| %>
        <li>&middot; <%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="field">
   <%= f.label :method %><br>
   <%= f.select :method, [['GET'],['POST'],['PUT'],['PATCH'],['DELETE']]%>
  </div>
  <br>
  <div class="field">
   <%= f.label :service %> <br>
   <%= f.text_field :service, size: "50x20",
      :value => (f.object.service || "{\"service\"=>\"\", \"subsection\"=>\"\"}") %>
  <br><br>
  <div class="field">
   <%= f.label :name %><br>
   <%= f.text_field :name, size: "50x20", placeholder: "Create Account" %>
  </div>
  <br>
  <div class="field">
   <%= f.label :headers %><br>
   <%= f.text_field :headers, size: "50x20",
      placeholder: "-H \"Content-Type: application/json\"" %>
  </div>
  <br>
  <div class="field">
   <%= f.label :url %><br>
   <%= f.text_field :url, size: "100x20",
      placeholder: "http://localhost:8080/v1/<uuid>" %>
  </div>
  <br>
  <div class="field">
   <%= f.label :data %><br>
   <%= f.text_area :data, size: "100x20", placeholder: "** Json **" %>
  </div>
  <br>

  <div class="actions">
   <%= f.submit %>
  </div>
  <br>
<% end %>
