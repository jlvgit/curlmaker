<div class="row">
    <!-- <div class="absolute-wrapper"> </div> -->
    <!-- Menu -->
    <div class="side-menu">

    <nav class="navbar navbar-default" role="navigation">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
        <div class="brand-wrapper">
            <!-- Hamburger -->
            <button type="button" class="navbar-toggle">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>

            <!-- Brand -->
            <div class="brand-name-wrapper">
              <%= link_to "Home", root_path, :class => 'navbar-brand'%>

              <% if user_signed_in? %>
                <% if current_user.admin %>
                  <%= link_to new_curl_path, class: "btn btn-default", id: "search-trigger" do %>
                    <span class="glyphicon glyphicon-plus" style="color:#A9A9A9"></span>
                  <% end %>
                <% end %>
              <% end %>
            </div>

        </div>

        <!-- Search -->
          <!-- <a data-toggle="collapse" href="#search" class="btn btn-default" id="search-trigger">
              <span class="glyphicon glyphicon-search"></span>
          </a> -->

          <!-- Search body -->
          <!-- <div id="search" class="panel-collapse collapse">
              <div class="panel-body">
                  <form class="navbar-form" role="search">
                      <div class="form-group">
                          <input type="text" class="form-control" placeholder="Search">
                      </div>
                      <button type="submit" class="btn btn-default "><span class="glyphicon glyphicon-ok"></span></button>
                  </form>
              </div>
          </div> -->
    </div>

    <% @sidenav = create_sidenav_sections(@sidenav) %>
    <% if current_user %>
    <!-- Main Menu -->
    <div class="side-menu-container">
      <ul class="nav navbar-nav">
        <% @sidenav.each_pair do |service, subsection| %>
          <li class="panel panel-default" id="dropdown">
            <a data-toggle="collapse" href="#<%= service %>-dropdown">
              <%= service %>
            <span class="caret"></span></a>

            <!-- Dropdown level 1 -->
            <div id="<%= service %>-dropdown" class="panel-collapse collapse">
              <div class="panel-body">
                <ul class="nav navbar-nav">


                    <!-- Dropdown level 2 -->

                    <% subsection.each do |section| %>
                      <li class="panel panel-default" id="dropdown">
                        <a data-toggle="collapse" href="#<%= service %>-<%= section %>-dropdown">
                           <%= section %>
                         <span class="caret"></span>
                        </a>

                        <div id="<%= service %>-<%= section %>-dropdown" class="panel-collapse collapse">
                          <div class="panel-body">
                            <ul class="nav navbar-nav">
                              <% @curls.each  do |curl| %>
                                <% grouping = JSON.parse(curl.service.gsub('=>', ':')) %>
                                <% if grouping['service']    == service  &&
                                      grouping['subsection'] == section %>
                                    <li><%= link_to curl.name, curl%></li>
                                <% end %>
                              <% end %>
                            </ul>
                          </div>
                        </div>
                      </li>
                    <% end %>

                </ul>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
    <% end %>
  </nav>
</div>
