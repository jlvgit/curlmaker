<html>
  <head>
    <title>Sonian Curls</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload', :protocol => :relative %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

      <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  </head>

  <%= render 'layouts/sidenav' %>

  <div class="container-fluid">
    <div class="side-body">
      <body>

        <div>
          <% if user_signed_in? %>
            <%= link_to "Logout", destroy_user_session_path, method: :delete,
                        :class => 'pull-right', :style => "padding-left:1em"  %>
            <%= link_to "Admin", rails_admin.dashboard_path, :class => 'pull-right' if current_user.admin %>
          <% end %>
        </div>

        <div id="Content">
          <% flash.each do |message_type, message| %>
            <%= content_tag(:div, message, class: "alert alert-#{message_type}") %>
          <% end %>
          <%= yield %>
        </div>

      </body>
    </div>
  </div>
</html>
